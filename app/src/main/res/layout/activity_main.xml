<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_data_input"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_site_id_title"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/edt_site_id"
                android:layout_alignBottom="@+id/edt_site_id"
                android:gravity="center_vertical"
                android:text="Site ID: "/>

            <EditText
                android:layout_toEndOf="@+id/txt_site_tbshoot_title"
                android:id="@+id/edt_site_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_margin="5dp">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_site_name_title"
                android:layout_below="@+id/edt_site_id"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/edt_site_name"
                android:layout_alignBottom="@+id/edt_site_name"
                android:gravity="center_vertical"
                android:text="Site Name: "/>

            <EditText
                android:layout_toEndOf="@+id/txt_site_tbshoot_title"
                android:layout_below="@+id/edt_site_id"
                android:id="@+id/edt_site_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_margin="5dp">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_site_date_title"
                android:layout_below="@+id/edt_site_name"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/edt_site_date"
                android:layout_alignBottom="@+id/edt_site_date"
                android:gravity="center_vertical"
                android:text="Date: "/>

            <EditText
                android:layout_toEndOf="@+id/txt_site_tbshoot_title"
                android:layout_below="@+id/edt_site_name"
                android:id="@+id/edt_site_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_margin="5dp">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_site_problem_title"
                android:layout_below="@+id/edt_site_date"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/edt_site_problem"
                android:layout_alignBottom="@+id/edt_site_problem"
                android:gravity="center_vertical"
                android:text="Problem: "/>

            <EditText
                android:layout_toEndOf="@+id/txt_site_tbshoot_title"
                android:layout_below="@+id/edt_site_date"
                android:id="@+id/edt_site_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_margin="5dp">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_site_tbshoot_title"
                android:layout_below="@+id/edt_site_problem"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/spn_tshoot"
                android:layout_alignBottom="@+id/spn_tshoot"
                android:gravity="center_vertical"
                android:text="Troubleshoot: "/>

            <Spinner
                android:layout_toEndOf="@+id/txt_site_tbshoot_title"
                android:layout_below="@+id/edt_site_problem"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="5dp"
                android:id="@+id/spn_tshoot"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </Spinner>

            <EditText
                android:layout_toEndOf="@+id/txt_site_tbshoot_title"
                android:layout_below="@+id/spn_tshoot"
                android:id="@+id/edt_site_tbshoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_margin="5dp">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_tshoot_add"
                android:layout_below="@+id/edt_site_tbshoot"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add_tbshoot"
                android:layout_below="@+id/txt_tshoot_add"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="ADD Troubleshoot"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_site_note_title"
                android:layout_below="@+id/btn_add_tbshoot"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/spn_note"
                android:layout_alignBottom="@+id/spn_note"
                android:gravity="center_vertical"
                android:text="Note: "/>

            <Spinner
                android:layout_marginEnd="20dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/txt_site_tbshoot_title"
                android:layout_below="@+id/btn_add_tbshoot"
                android:id="@+id/spn_note"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </Spinner>

            <EditText
                android:layout_toEndOf="@+id/txt_site_tbshoot_title"
                android:layout_below="@+id/spn_note"
                android:id="@+id/edt_site_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_margin="5dp">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_note_add"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:layout_below="@+id/edt_site_note"/>

            <ListView
                android:layout_below="@+id/btn_add_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lstvw_note">

            </ListView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add_note"
                android:layout_below="@+id/edt_site_note"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="ADD Note"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_img"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/lstvw_note"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add_image"
                android:layout_below="@+id/txt_img"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Add Image"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_generate_report"
            android:layout_below="@+id/layout_data_input"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:text="Create PDF"/>

    </RelativeLayout>

</ScrollView>