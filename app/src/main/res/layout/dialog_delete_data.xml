<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/dialog_btn_del_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:text="Delete From List"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/dialog_btn_del_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/dialog_btn_del_list"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:text="Delete From History"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/dialog_edtBtn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:text="CLOSE"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>