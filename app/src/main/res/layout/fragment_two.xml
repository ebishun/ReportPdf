<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_site_tbshoot_title"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/spn_tshoot"
        android:layout_alignBottom="@+id/spn_tshoot"
        android:gravity="center_vertical"
        android:text="Troubleshoot: "/>

    <Spinner
        android:id="@+id/spn_tshoot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/txt_site_tbshoot_title"
        android:spinnerMode="dialog">
    </Spinner>

    <ListView
        android:visibility="gone"
        android:id="@+id/lstvw_tbshoot"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spn_tshoot">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_site_note_title"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/spn_note"
        android:layout_alignBottom="@+id/spn_note"
        android:gravity="center_vertical"
        android:text="Note: "/>

    <Spinner
        android:id="@+id/spn_note"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lstvw_tbshoot"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/txt_site_tbshoot_title"
        android:spinnerMode="dialog">
    </Spinner>

    <ListView
        android:visibility="gone"
        android:id="@+id/lstvw_note"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spn_note">
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_frag_two_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:text="Next"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:id="@+id/btn_frag2_back"/>

</RelativeLayout>